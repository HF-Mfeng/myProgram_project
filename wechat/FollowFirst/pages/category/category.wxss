
page{  
  height: 100%;
  width: 100%;
  background-color:  var(--themColor);
}

#pyg_index{
  height: 100%;
}
.cates_container{
  height: calc( 100vh - 90rpx ) ;
  display: flex;
}
.left{
  width: 20%;
  height: 100%;
  display: flex;
  flex: 2;
}
.goods_content{
  width: 100%;
  height: 20%;
  display: flex;
  flex-wrap: wrap;
}
.goods_navigator{
  width: 33.33%;
  height: 100%;
  background-color: var(--themColor);
  float: left;
}
.goods_group{
  height: 80%;
}
.active{
  color: white;
  border-left: 5rpx solid currentColor;
}
.right{
  width: 100%;
  height: 100%;
  float: inline-start;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  flex: 5;
}
.left_menu{
  height: 80rpx;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.image_view{
  height: 15%;
  width: 100%;
}
.text_view{
  height: 5%;
  width: 100%;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
}
.goods_photo{
  width: 100%;
}
